{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Person": {
      "$ref": "#/definitions/Person"
    }
  },
  "title":"Person",
  "required": [
    "Person"
  ],
  "definitions": {
    "Person": {
      "$id": "#/properties/Person",
      "type": "object",
      "title": "The Person Schema",
      "required": [
        "voterId",
        "name",
        "gender",
        "dob",
        "email",
        "phone"
      ],
      "additionalProperties": false,
      "properties": {
        "signatures": {
          "$id": "#/properties/signatures",
          "type": "array",
          "items": {
            "$ref": "Signature.json#/definitions/Signature"
          },
          "$comment": "Placeholder for all verifiable claims"
        },
        "hasDrivingLicense": {
          "$id": "#/properties/hasDrivingLicense",
          "type": "boolean",
          "title": "Driving license is present"
        },
        "isAdmin": {
          "$id": "#/properties/hasDrivingLicense",
          "type": "boolean",
          "title": "Admin"
        },
        "photo": {
          "title": "Photo",
          "description": "Upload your profile picture.",
          "type": "string",
          "format": "uri"
        },
        "voterId": {
          "$id": "#/properties/voterId",
          "type": "string",
          "$comment": "Voter identifier"
        },
        "name": {
          "$id": "#/properties/name",
          "type": "string",
          "title": "Full name"
        },
        "gender": {
          "$id": "#/properties/gender",
          "$ref": "Common.json#/definitions/Gender"
        },
        "dob": {
          "$id": "#/properties/birthDate",
          "$ref": "Common.json#/definitions/Date"
        },
        "email": {
          "$id": "email",
          "type": "string",
          "title": "Email"
        },
        "school": {
          "$id": "school",
          "type": "string",
          "title": "School"
        },
        "phone": {
          "$id": "phone",
          "type": "string",
          "title": "Phone"
        },
        "district": {
          "$id": "district",
          "type": "string",
          "title": "District"
        },
        "certificate": {
          "$id": "certificate",
          "type": "string",
          "title": "Certificate"
        }
      }
    }
  }
}