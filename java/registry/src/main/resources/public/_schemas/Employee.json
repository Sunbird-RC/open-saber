{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Employee": {
      "$ref": "#/definitions/Employee"
    }
  },
  "required": [
    "Employee"
  ],
  "title": "Employee",
  "definitions": {
    "Employee": {
      "$id": "#/properties/Employee",
      "type": "object",
      "title": "The Employee Schema",
      "required": [
        "orgName",
        "name",
        "email",
        "phone"
      ],
      "properties": {
        "orgName": {
          "$id": "#/properties/orgName",
          "type": "string",
          "enum": [
            "ILIMI",
            "Tarento",
            "TEKDI",
            "OPTIT",
            "Qualitrix",
            "Framewirk",
            "Consultant",
            "GWL",
            "TurtleBowl",
            "MantraLabs",
            "Zool",
            "Tibil",
            "Lollypop",
            "E&Y",
            "BeyondSquare",
            "Compassites",
            "Juspay",
            "Latitude Fintech",
            "Monsoonfish",
            "Nurture",
            "Riflexion",
            "Sahaj",
            "SQS",
            "PosteroTech",
            "EkStep",
            "Funtoot",
            "Kuliza"
          ],
          "title": "Organisation name"
        },
        "name": {
          "$id": "#/properties/name",
          "type": "string",
          "$comment": "Employee name"
        },
        "email": {
          "$id": "#/properties/email",
          "type": "string",
          "$comment": "Email id"
        },
        "phone": {
          "$id": "#/properties/phone",
          "type": "string",
          "$comment": "Phone"
        },
        "macAddress": {
          "$id": "#/properties/macAddress",
          "type": "string",
          "$comment": "MAC Address"
        },
        "location": {
          "$id": "#/properties/location",
          "type": "string",
          "$comment": "Employee Location"
        },
        "role": {
          "$id": "#/properties/username",
          "type": "string",
          "enum": [
            "Architect",
            "BA",
            "Developer",
            "Tech Lead",
            "Project Management",
            "Design Council",
            "Designer",
            "Tech Manager",
            "DevOps",
            "Tech Support",
            "Tech Writer",
            "Test Engineer",
            "Lead Analyst",
            "Product Management",
            "Intern",
            "QA Lead",
            "Principal Engineer"
          ],
          "title": "EkStep role"
        },
        "externalId": {
          "$id": "#/properties/externalId",
          "type": "string",
          "$comment": "Org specific identifier"
        },
        "externalRole": {
          "$id": "#/properties/externalId",
          "type": "string",
          "$comment": "Org specific role"
        },
        "isActive": {
          "$id": "#/properties/isActive",
          "type": "boolean",
          "title": "isApproved"
        },
        "isInKronos": {
          "$id": "#/properties/isInKronos",
          "type": "boolean",
          "title": "isInKronos"
        },
        "nineAMreportTo": {
          "$id": "#/properties/nineAMreportTo",
          "type": "string",
          "title": "nineAMreportTo"
        },
        "subProjectName": {
          "$id": "#/properties/subProjectName",
          "type": "string",
          "enum": [
            "User Platform",
            "Mobile",
            "Implementation",
            "Project Management",
            "Design Council",
            "DIKSHA UX",
            "Content Framework",
            "Portal",
            "Infra & DevOps",
            "DIKSHA Liasion",
            "Learning Platform",
            "DIKSHA Tech Support",
            "Courses Platform",
            "DIKSHA Analytics",
            "Adhoc Analytics",
            "Automation QA",
            "Analytics",
            "Data Science",
            "DS-Solutioning",
            "Documentation",
            "DS-Liasion",
            "DS-Product",
            "Testing",
            "Support",
            "UX",
            "Ektep Platform",
            "Offline Consumption",
            "Open SABER",
            "SB2",
            "Genie",
            "UI",
            "Ekstep Portal",
            "Plugin"
          ],
          "title": "Sub-project name"
        },
        "projectName": {
          "$id": "#/properties/projectName",
          "type": "string",
          "enum": [
            "DIKSHA",
            "Learning platform",
            "Sunbird + DIKSHA",
            "Ekstep Platform",
            "Sunbird",
            "SB+DS",
            "ES+DS",
            "SB2",
            "Plugins",
            "Non DIKSHA"
          ],
          "title": "Project name"
        },
        "proposedBilling": {
          "$id": "#/properties/proposedBilling",
          "type": "string",
          "enum": [
            "Analytics",
            "Engineering",
            "Solutions",
            "Support",
            "UX",
            "Diksha Services",
            "Documentation",
            "SB2",
            "Non Diksha"
          ],
          "title": "Proposed billing"
        },
        "billLocation": {
          "$id": "#/properties/billLocation",
          "type": "string",
          "default": "Bangalore",
          "title": "Billing location"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "$comment": "YYYY-MM-DD format",
          "examples": [
            "1990-12-01"
          ]
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "$comment": "YYYY-MM-DD format",
          "examples": [
            "1990-12-01"
          ]
        },
        "githubId": {
          "$id": "#/properties/githubId",
          "type": "string",
          "title": "Github identifier"
        },
        "repoAccess": {
          "$id": "#/properties/repoAccess",
          "type": "string",
          "enum": [
            "ES",
            "SB",
            "Both",
            "Not-Eligible"
          ],
          "title": "Code repo access"
        },
        "slackAccess": {
          "$id": "#/properties/slackAccess",
          "type": "string",
          "enum": [
            "ES",
            "SB",
            "Both",
            "Not-Eligible"
          ],
          "title": "Slack access"
        },
        "workLocation": {
          "$id": "#/properties/workLocation",
          "type": "string",
          "enum": [
            "EkStep",
            "Ilimi",
            "Tarento"
          ],
          "title": "Place of work"
        },
        "remarks": {
          "$id": "#/properties/remarks",
          "type": "string",
          "title": "Remarks"
        },
        "workingStyle": {
          "$id": "#/properties/workLocation",
          "type": "string",
          "enum": [
            "Half-time",
            "Full-time"
          ],
          "title": "Working style"
        }
      }
    }
  },
  "_osConfig": {
    "osComment": [
      "This section contains the OpenSABER specific configuration information",
      "privateFields: Optional; list of field names to be encrypted and stored in database",
      "signedFields: Optional; list of field names that must be pre-signed",
      "indexFields: Optional; list of field names used for creating index. Enclose within braces to indicate it is a composite index. In this definition, (serialNum, teacherCode) is a composite index and teacherName is a single column index.",
      "uniqueIndexFields: Optional; list of field names used for creating unique index. Field names must be different from index field name",
      "systemFields: Optional; list of fields names used for system standard information like created, updated timestamps and userid"
    ],
    "privateFields": [],
    "signedFields": [],
    "indexFields": [],
    "uniqueIndexFields": [],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ]
  }
}