{
  "$schema": "http://json-schema.org/draft-/schema",
  "type": "object",
  "properties": {
    "teachingRole": {
      "$ref": "#/definitions/TeachingRole"
    }
  },
  //NOTE: 'title' field value should same as 'required' field value
  "title":"teachingRole",
  "_osconfig": {
         "comment": "This section contains the OpenSABER specific configuration information",
         "privateFields": [],
         "signedFields": []
  },
  "required": [
    "teachingRole"
  ],
  "definitions": {
    "TeachingRole": {
      "$id": "#",
      "type": "object",
      "required": [
        "teacherType",
        "appointmentType",
        "classesTaught",
        "appointedForSubjects",
        "mainSubjectsTaught",
        "appointmentYear"
      ],
      "properties": {
        "teacherType": {
          "$id": "#/properties/teacherType",
          "$ref": "Common.json#/definitions/TeacherType"
        },
        "appointmentType": {
          "$id": "#/properties/appointmentType",
          "$ref": "Common.json#/definitions/AppointmentType"
        },
        "classesTaught": {
          "$id": "#/properties/classesTaught",
          "type": "array",
          "$ref": "Common.json#/definitions/ClassType"
        },
        "appointedForSubjects": {
          "$id": "#/properties/appointedForSubjects",
          "type": "array",
          "$ref": "Common.json#/definitions/Subjects"
        },
        "mainSubjectsTaught": {
          "$id": "#/properties/mainSubjectsTaught",
          "type": "array",
          "items": {
            "$ref": "Common.json#/definitions/Subjects"
          }
        },
        "appointmentYear": {
          "$id": "#/properties/appointmentYear",
          "$ref": "Common.json#/definitions/Year"
        }
      }
    }
  }
}