{
  "$id": "#/properties/Person",
  "type": "object",
  "title": "The Person Schema",
  "required": [
    "nationalIdentifier",
    "name",
    "gender",
    "dob"
    ],
  "additionalProperties": false,
  "properties": {
    "nationalIdentifier": {
      "$id": "#/properties/nationalIdentifier",
      "type": "string",
      "$comment": "Nationality",
      "pattern": "^[0-9]{3}-.*",
      "title": "National identifier",
      "examples": ["888-abc", "639-def"]
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "Full name"
    },
    "gender": {
      "$id": "#/properties/gender",
      "$ref": "Common.json#/definitions/Gender"
    },
    "dob": {
      "$id": "#/properties/birthDate",
      "$ref": "Common.json#/definitions/Date"
    },
    "email": {
      "$id": "email",
      "type": "string",
      "title": "Email ID"
    },
    "school": {
      "$id": "school",
      "type": "string",
      "title": "School"
    },
    "phone": {
      "$id": "phone",
      "type": "string",
      "title": "Phone"
    },
    "dist": {
      "$id": "dist",
      "type": "string",
      "title": "District"
    },
    "certificate": {
      "$id": "certificate",
      "type": "string",
      "title": "Certificate"
    },
    "hasDrivingLicense": {
      "$id": "#/properties/hasDrivingLicense",
      "type": "boolean",
      "title": "Driving license is present"
    },
    "isAdmin": {
      "$id": "#/properties/hasDrivingLicense",
      "type": "boolean",
      "title": "Admin"
    },
    
    "photo":{
      "title":"Photo",
      "description":"Upload your profile picture.",
      "type":"string",
      "format":"uri"
  }
  }
}